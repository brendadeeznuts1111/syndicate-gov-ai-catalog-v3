# Dockerfile.test - Containerized reproducibility for Citadel tests
FROM oven/bun:1.3.0-alpine

WORKDIR /app

# Copy lockfile and package.json first for layer caching
COPY package.json bun.lock ./

# Install dependencies with frozen lockfile (fails on mismatch)
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Run tests
CMD ["bun", "test"]
