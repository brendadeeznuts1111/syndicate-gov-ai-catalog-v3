# Dockerfile.test-working - Working version for demonstration
FROM oven/bun:1.3.0-alpine

WORKDIR /app

# Copy lockfile and package.json first for layer caching
COPY package.json bun.lock ./

# Install dependencies (without frozen lockfile for demo)
RUN bun install

# Copy source code
COPY . .

# Run tests
CMD ["bun", "test"]
