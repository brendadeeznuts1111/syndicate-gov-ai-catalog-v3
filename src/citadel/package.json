{
  "name": "@syndicate/citadel",
  "version": "1.3.0",
  "description": "Syndicate Unified Citadel - Bun 1.3 Runtime Architecture",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "citadel": "./citadel/cli/main.ts"
  },
  "scripts": {
    "build": "bun build ./citadel/cli/main.ts --outdir ./dist --target bun",
    "start": "bun run ./citadel/cli/main.ts",
    "dev": "bun --watch ./citadel/cli/main.ts",
    "test": "bun test",
    "lint": "bun lint ./citadel/**/*.ts",
    "typecheck": "bun tsc --noEmit",
    "citadel": "bun run ./citadel/cli/main.ts",
    "init": "bun run ./citadel/cli/main.ts init",
    "install:example": "bun run ./citadel/cli/main.ts install @syndicate/agent-risk",
    "gov:example": "bun run ./citadel/cli/main.ts gov:rule '{\"name\":\"Test Rule\",\"category\":\"SECURITY\",\"trigger\":\"test.trigger\",\"action\":\"test.action\",\"priority\":\"REQUIRED\"}'",
    "dashboard": "bun run ./citadel/cli/main.ts gov:dashboard",
    "perf:test": "bun run ./citadel/cli/main.ts perf:analyze",
    "status": "bun run ./citadel/cli/main.ts status",
    "registry:list": "bun run ./citadel/cli/main.ts registry:list",
    "registry:stats": "bun run ./citadel/cli/main.ts registry:stats"
  },
  "dependencies": {
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "bun-types": "^1.3.0"
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=20.0.0"
  },
  "keywords": [
    "syndicate",
    "citadel",
    "package-manager",
    "governance",
    "bun",
    "registry",
    "performance",
    "optimization",
    "websocket",
    "yaml"
  ],
  "author": "Syndicate Governance Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/syndicate/citadel.git"
  },
  "bugs": {
    "url": "https://github.com/syndicate/citadel/issues"
  },
  "homepage": "https://github.com/syndicate/citadel#readme",
  "files": [
    "citadel/**/*",
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./citadel/core/pm-core.ts",
      "import": "./citadel/core/pm-core.ts"
    },
    "./registry": {
      "types": "./citadel/registry/unified-registry.ts",
      "import": "./citadel/registry/unified-registry.ts"
    },
    "./integrator": {
      "types": "./citadel/integrator/governance-integrator.ts",
      "import": "./citadel/integrator/governance-integrator.ts"
    },
    "./performance": {
      "types": "./citadel/performance/optimizer.ts",
      "import": "./citadel/performance/optimizer.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
